<% include ./templates/head%>
    <title>CE-Acad | Quiz</title>
</head>

<body>
    <% include ./templates/header%>
    <div class="main-title"> 
        <h1>Quiz</h1>
    </div>
    <hr>
    <h1 style="text-align: center;">View, Register for, and Participate in Quiz Challenges</h1>
    <!-- Quiz Details -->
    <%quiz.forEach((q,i)=>{%>
        <hr>
        <div class="grid-container">
            <div class="grid-item-left">
                <h1><%=q.title%></h1>
                <p><%=q.rules%></p>
            </div>
            <div class="grid-item-right">
                <p><span class="labels">Session: </span> <%=q.round%></p>
                <p><span class="labels">Current Number of Participants: </span> <%=q.current_participants%></p>
                <p><span class="labels">Registration Fee: </span> <%=q.registration_fee%> FCFA</p>
                <p><span class="labels">Winning Price: </span> <%=q.winning_price%> FCFA per session</p><br>
                <%if (q.played_users.includes(user.id)){%>
                    <p class="labels">Waiting for the next <%=4-q.current_participants%> participant(s)</p>
                <%}else if (q.registered_users.includes(user.id)) {%>
                    <form action="/dashboard/quiz/take-quiz-now" method="POST">
                        <input type="hidden" name="id" value = <%=q.id%> >
                        <input type="hidden" name="subject" value = <%=q.subject%> >
                        <input type="hidden" name="topic" value = <%=q.topic%> >
                        <input type="hidden" name="level" value = <%=q.level%> >
                        <input type="submit" class="btn" value="TAKE QUIZ NOW">
                    </form>
                <%}else{%>
                    <form action="/dashboard/quiz/register" method="POST">
                        <input type="hidden" name="id" value = <%=q.id%> >
                        <input type="hidden" name="registration_fee" value = <%=q.registration_fee%> >
                        <input type="password" name="password">
                        <p class="labels">Enter password</p><br>
                        <input type="submit" class="btn" value="REGISTER">
                    </form>
                <%}%>    
            </div>
        </div>
    <%})%>
    <% include ./templates/footer%>
</body>
